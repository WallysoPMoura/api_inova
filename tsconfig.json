{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
      "types": ["node"],
      "outDir": "./dist",
      "baseUrl": "./src",
  
      "paths": {
        "@core/*": [
          "@core/*"
        ],
        "@middleware/*": [
          "middleware/*"
        ],
      },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": ["src/**/*", "@types"]
  }